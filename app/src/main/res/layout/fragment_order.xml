<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/order_title"
        android:id="@+id/toolbar_order"
        android:titleTextAppearance="@style/ToolBarTitle"
        android:background="@color/colorPrimary"
        android:titleTextColor="@color/colorBackground"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDC8C7C7"
        android:layout_below="@+id/toolbar_order"
        />
    <GridView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:id="@+id/grid_view_order">

    </GridView>

</LinearLayout>